.map-container
  .main-control-group.fixed.clearfix
    .container
      %form.form-inline
        %fieldset
          %label
            Select area
          %select
            %option{ :selected => "selected" }
              All Areas
            %option
              Cebu City
            %option
              Toledo
            %option
              Naga
            %option
              Carcar
        %fieldset
          %label
            Expiring in:
          %select
            %option{ :selected => "selected" }
              30 days
            %option
              2 months
            %option
              6 months
        %fieldset.pull-right.main-control-actions
          %a.btn
            %i.icon-print
          %a.btn
            %i.icon-external-link

  = gmaps4rails(@json)

.main-stats
  .container
    .row
      .span12
        %h3
          Cebu City
      .span4
        %strong
          5,343
        gun owners
      .span4
        %strong
          324
        expiring in 30 days
      .span4
        %strong
          42
        expired licenses

.container
  .row
    .span12
      = will_paginate @guns

      %table.table.table-hover.user-table-list
        %thead
          %tr
            %th
              Name
            %th
              Gun
            %th
              Serial Number
            %th
              Date Issued
            %th
              Expiry date
        %tbody
          - @guns.each do |g|
            %tr
              %td
                %strong= g.gun_owner.name
              %td #{g.kind} #{g.make} #{g.caliber} #{g.model}
              %td= g.serial_number
              %td= g.issued_date
              %td= g.expiry_date

      = will_paginate @guns
