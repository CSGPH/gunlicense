.container
  .content  
    
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form bordered labeled" }) do |f|
      %h3.form-title Forgot your password?
      = devise_error_messages!
      %fieldset
        = f.label :email
        = f.text_field :email, :autofocus => true
      %fieldset
        = f.submit "Reset Password", :class => "btn green"
      %fieldset
        = render "devise/shared/links"
    
