.container
  .row
    .span12
      %ul.breadcrumb
        %li
          = link_to "Home", root_url
          %span.divider
            \/
        %li.active
          = @gun_owner.name

.content
  .container
    .row
      .span12
        .image-upload-form.pull-left
          .profile-image
            %img
          .profile-image-actions
            %a
              change
        %ul.user-info.pull-left
          %li
            %strong
              = @gun_owner.name
          %li
            #{@gun_owner.address}, #{@gun_owner.city}
          %li
            %span.label.label-success
              Private Employee
          %li
            = link_to "Edit", edit_admin_gun_owner_path(@gun_owner)
.content
  .map-container
    = gmaps4rails(@json)
  .container
    .row
      .span12
        %table.table.table-hover
          %thead
            %tr
              %th
                Kind / Make / Model
              %th
                Serial #
              %th
                Date Issued
              %th
                Expiry Date

          %tbody
            - @guns.each do |gun|
              %tr
                %td
                  %strong
                    %a
                      #{gun.kind} #{gun.make} #{gun.caliber} #{gun.model}
                %td
                  #{ gun.serial_number }
                %td
                  #{gun.issued_date}
                %td
                  #{gun.expiry_date}
                %td
                  %a
                    Edit
